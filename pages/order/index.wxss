.order {
  margin-top: 30rpx;
}
.order .time {
  color: #666;
  background: #fff;
  font-size: 30rpx;
  padding: 20rpx 30rpx;
}
.order .product {
  background: #fff;
  display: flex;
  justify-content: space-between;
  margin-top: 1px;
  padding: 20rpx 30rpx;
}
.order .product image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
}
.order .product .info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 30rpx;
  color: #666;
}
.order .total {
  background: #fff;
  padding: 20rpx 30rpx;
  color: #666;
  text-align: right;
  margin-top: 1px;
  font-size: 30rpx;
}